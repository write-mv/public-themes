{
    "name": "write-mv/themes",
    "description": "Write.mv themes",
    "keywords": [
        "write-mv",
        "themes"
    ],
    "homepage": "https://github.com/write-mv/themes",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Mohamed Jinas",
            "email": "j@live.mv",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/filesystem": "^8.75",
        "illuminate/support": "^8.0",
        "illuminate/view": "^8.75",
        "livewire/livewire": "^2.4",
        "nesbot/carbon": "^2.55",
        "romanzipp/laravel-seo": "^2.2"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "WriteMv\\Themes\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WriteMv\\Themes\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "WriteMv\\Themes\\ThemesServiceProvider"
            ]
        }
    }
}
